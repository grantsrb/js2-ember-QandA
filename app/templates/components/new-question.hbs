{{#if showForm}}
  <div class="row panel">
    <div class="col-sm-3 panel">
      <div class="form-group">
        <label for="author">User Name:</label>
        {{input value=author id="author"}}
      </div>
      <button {{action 'saveQuestion'}}>Submit</button>
      <button {{action 'displayForm' showForm}}>Cancel</button>
    </div>
    <div class="col-sm-9 panel">
      <div class="form-group">
        <label for="content">Question:</label>
        {{input value=content id="content"}}
      </div>
      <div class="form-group">
        <label for="details">Question Details:</label>
        {{input value=details id="details"}}
      </div>
      <div class="form-group">
        <label for="tags">Tags:</label>
        {{input value=tags id="tags"}}
      </div>
    </div>
  </div>
{{else}}
  <button {{action 'displayForm' showForm}}>New Question</button>
{{/if}}
